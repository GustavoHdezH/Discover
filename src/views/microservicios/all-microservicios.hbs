<div class="row">
    {{#each servicios}}
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{container}} <a href="/microservicios/edit/{{_id}}"> <i class="fas fa-edit"></i></a> 
                    </h4>
                    <p>{{port}}</p>
                    <p>{{server}}</p>
                    <p>{{discover}}</p>
                    <p>{{code}}</p>
                    <p>{{team}}</p>
                    <form action="/microservicios/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-outline-danger btn-block btn-sm">
                            Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>